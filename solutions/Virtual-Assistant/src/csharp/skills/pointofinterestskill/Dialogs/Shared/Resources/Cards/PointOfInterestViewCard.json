{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "speak": "{LocationName} is located at {SpeakAddress}",
  "body": [
    {
      "type": "Image",
      "url": "{ImageUrl}",
      "size": "auto",
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "text": "{LocationName}",
      "size": "medium"
    },
    {
      "type": "TextBlock",
      "text": "{Address}",
      "size": "medium",
      "weight": "lighter"
    },
    {
      "text": "Ask me like this:",
      "type": "TextBlock",
      "weight": "bolder"
    },
    {
      "text": "*Find the fastest route to {LocationName}*",
      "type": "TextBlock",
      "wrap": "true"
    },
    {
      "text": "*How do I get to {LocationName}*",
      "type": "TextBlock",
      "wrap": "true"
    },
    {
      "text": "*Show directions to {SpeakAddress}*",
      "type": "TextBlock",
      "wrap": "true"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Find a route",
      "data": {
        "event": {
          "name": "POI.ActiveLocation",
          "text": "Find a route",
          "value": "{LocationName}"
        }
      }
    }
  ]
}