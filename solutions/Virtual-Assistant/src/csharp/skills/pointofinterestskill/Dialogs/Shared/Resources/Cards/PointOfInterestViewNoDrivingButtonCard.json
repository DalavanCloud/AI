{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "type": "AdaptiveCard",
  "speak": "{Name} is located at {SpeakAddress}",
  "body": [
    {
      "type": "Image",
      "url": "{ImageUrl}",
      "size": "auto",
      "horizontalAlignment": "center"
    },
    {
      "type": "TextBlock",
      "text": "{Name}",
      "size": "medium",
      "weight": "bolder"
    },
    {
      "type": "TextBlock",
      "text": "{Address}",
      "size": "medium"
    }
  ]
}